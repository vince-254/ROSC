<div class="section homeBackground">
	<p id="notice"><%= notice %></p>
	<div class="notification blueish">
		<h1 class="title container is-centred">Enquiries</h1>
	</div>
	<% if user_signed_in? %>

	<% @enquiries.each do |enquiry| %>
	<% if current_user.service.name == enquiry.service.name %>
		<div class="container section">
					<article class="message is-multiline">
							<div class="message-header">
									<p>
										<%= enquiry.name %>
									</p>
									<nav class="level">
										<div class="level-left">
											<div class="tag is-primary level-item">
														<span class="icon">

																		<i class="fa fa-id-badge" aria-hidden="true"></i>
														 </span>
														id:[<%= enquiry.id %>]
											</div>
											<div class="tag is-primary level-item">
												<span class="icon">

																<i class="fa fa-clock-o" aria-hidden="true"></i>
												</span>
												<%= enquiry.created_at%><br>
											</div>
										</div>
									</nav>
							</div>
							<div class="message-body">
							<p class="content">
								<strong>
									Email Address:
								<%= enquiry.email%><br>
								</strong>
								<strong>
									Service:
									<%= enquiry.service.name%><br>
								</strong>
								<div class="has-text-weight-semibold">Enquiry:</div>
								<div class="notification is-primary">
									<%= enquiry.question%><br>
								</div>

								<span class="tag is-primary"><%= link_to "Show", enquiry_path(enquiry) %></span><br>

								<a class="tag is-primary" href="#">
									Reply
								<span class="icon">

												<i class="fa fa-envelope" aria-hidden="true"></i>
											</span>
								</a>
							</p>
							</div>
							<nav class="level">
								<div class="level-left">

								</div>
								<!-- Right side-->
								<div class="level-right">
									<p class="level-item">
										<span class="icon">

										</span>
										<%=link_to "Delete", enquiry_path(enquiry), method: :delete, data: {confirm:"Are you sure? "}, class: "button is-danger" %>
									</p>
								</div>
							</nav>
					</article>
		</div>
			<% end %>
	<% end %>
	<% end %>

		</div>
