<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter a title...", autofocus: true %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :description, label: "Description", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "write your post...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
