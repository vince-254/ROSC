
<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="field">
                      <p class="control">
                        <%= f.input :name, label: "Name", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter your name..." , autofocus: true, required: true %>
                      </p>
    </div>
    <div class="field">
                      <p class="control">
                        <%= f.input :description, label: "Description", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter a short description..." , autofocus: true, required: true %>
                      </p>
    </div>
  </div>

  <br>
  <div class="form-actions">
  <p class="control">
      <%= f.button :submit, class: "button is-info" %>
  </p><br>
  <%= link_to 'Back', services_path, class: "button is-primary" %>
</div>
<% end %>
