    <div class="section homeBackground">

      <div class="container">
        <p id="notice"><%= notice %></p>
        <div class="blueish notification">
          <h1 class="title">Services</h1>
        </div>
        <%= link_to 'New Service', new_service_path, class: "button is-info" %>
      </div>
      <% @services.each do |service| %>
      <div class="container section">
        <div class=" is-centered ">
          <div class="">
            <article class="message is-multiline">
                <div class="message-header">
                    <p>
                      <%= service.name %>
                    </p>
                    <nav class="level">
                      <div class="level-left">
                        <div class="tag is-primary level-item">
                      <span class="icon">

                              <i class="fa fa-id-badge" aria-hidden="true"></i>
                            </span>
                      id:[<%= service.id %>]
                    </div>
                    <div class="tag is-primary level-item">
                      <span class="icon">

                              <i class="fa fa-clock-o" aria-hidden="true"></i>
                            </span>
                      <%= service.created_at%><br>
                    </div>
                      </div>
                    </nav>


                </div>
                <div class="message-body">
                  <p class="content">
                    <div class="notification is-primary">
                      <%= service.description%><br>
                    </div>

                    <span class="tag is-primary"><%= link_to "Show", service_path(service) %></span><br>
                    <span class="tag is-primary"><%= link_to 'Edit', edit_service_path(service) %></span><br>
                </p>
                </div>
                <nav class="level">
                  <div class="level-left">

                  </div>
                  <!-- Right side-->
                  <div class="level-right">
                    <p class="level-item">
                      <span class="icon">

                      </span>
                      <%=link_to "Delete", service_path(service), method: :delete, data: {confirm:"Are you sure? "}, class: "button is-danger" %>
                    </p>
                  </div>
                </nav>
            </article>

          </div>
      </div>
      </div>
<% end %>
    </div>
