<div class="homeBackground section">
  <p id="notice"><%= notice %></p>
    <div class="notification blueish">
      <h1 class="title">Services</h1>
    </div>


    <div class="container section">
        <article class="message is-multiline">
            <div class="message-header">
                <p>
                  <%= @service.name %>
                </p>
                <nav class="level">
                  <div class="level-left">
                    <div class="tag is-primary level-item">
                  <span class="icon">

                          <i class="fa fa-id-badge" aria-hidden="true"></i>
                  </span>
                  id:[<%= @service.id %>]
                </div>
                <div class="tag is-primary level-item">
                  <span class="icon">

                          <i class="fa fa-clock-o" aria-hidden="true"></i>
                        </span>
                  <%= @service.created_at%><br>
                </div>
                  </div>
                </nav>


            </div>
            <div class="message-body">
              <p class="content">
                <div class="notification is-primary">
                  <%= @service.description%><br>
                </div>
                <nav class="level">
                  <div class="level-left">

                  </div>
                  <!-- Right side-->
                  <div class="level-right">
                    <p class="level-item">
                      <%= link_to 'Edit', edit_service_path(@service), class: "button is-primary" %> |
                      <%= link_to 'Back', services_path, class: "button is-primary" %>
                    </p>
                  </div>
                </nav>
            </p>
            </div>
        </article>

  </div>

</div>
