			  		<p>
              <%= simple_form_for(@appointment) do |f| %>
                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                <div class="form-inputs">
                  <div class="field">
                                    <p class="control">
                                      <%= f.input :name, label: "Name", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter your name..." , autofocus: true, required: true %>
                                    </p>
                  </div>
                  <div class="field">
                                    <p class="control">
                                      <%= f.input :contact, label: "contact", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter your contact..." , autofocus: true, required: true %>
                                    </p>
                  </div>
                  <div class="field">
                                    <p class="control">
                                      <%= f.input :date, label: "Date", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter date..." , autofocus: true, required: true %>
                                    </p>
                  </div>

                  <div class="field">
                    <div class="control">
                      <%= f.association :service, wrapper: false , input_html: {class: "input"}, label_html: {class: "label"}%>
                    </div>
                  </div>
                </div>
								<br>
								<div class="form-actions">
								<p class="control">
										<%= f.button :submit, class: "button is-info" %>
								</p><br>
							</div>
              <% end %>
			  		</p>
